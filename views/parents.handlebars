  <div class="recom">
    <div class="col-xs-12 col-sm-12">
      <h3>LIST</h3>
    </div>
    <div class="col-xs-4 col-sm-4 listbuttons">
      <img class="img-responsive" src="/images/icons/like.png" alt="like">
      <h4>LIKE</h4>
    </div>
    <div class="col-xs-4 col-sm-4 listbuttons">
      <img class="img-responsive" src="/images/icons/saved.png" alt="like">
      <h4>SAVED</h4>
    </div>
    <div class="col-xs-4 col-sm-4 listbuttons">
      <img class="img-responsive" src="/images/icons/future.png" alt="like">
      <h4>FUTURE</h4>
    </div>
    <div class="col-xs-4 col-sm-4 listbuttons">
      <img class="img-responsive" src="/images/icons/more.png" alt="like">
      <h4>MORE</h4>
    </div>
  </div>
<section style="clear: both" class="genre-lists" v-for="genre in genres">
  <h6 class="genre-name">MOVIES AND SERIES</h6>

  <div v-if="genre.movies.length > 0">

    <div class="genre-item">
        <div class="movie-list" v-for="movie in genre.movies">
          <a :href="'/movies/' + movie.con_id + '/' + movie.con_video">
            <img class ="movie-thumb" :src="'/images/movies/' + movie.con_image" :alt="movie.con_name">
          </a>
        </div>
      </div>
    </div>
  </section>


</section>

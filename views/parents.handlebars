<section id="app" class="movie-genres">
  <div class="movie-wrapper">

    <aside class="col-xs-6 col-sm-4">
      <h4 class="movie-title">{{ defaultMovie.con_name }}</h4>
      <span class="movie-year">
        {{ defaultMovie.con_year }} &nbsp;&bull;&nbsp; {{ defaultMovie.con_runtime}}
      </span>
      <i class="movie-genre">{{ defaultMovie.genre_name }}</i>
    </aside>
    <video autoplay>
      <source src="videos/{{ defaultMovie.con_video }}" type="video/mp4">
      <!-- should load in the fallback sources here -->
    </video>

  </div>
  <div class="soon">
    <div class="col-xs-12 col-sm-12">
      <h3>COMING SOON</h3>
    </div>
    <div class="col-xs-6 col-sm-6">
      <img class="img-responsive" src="/images/movies/golden.jpg" alt="golden girls">
    </div>
    <div class="col-xs-6 col-sm-6">
      <img class="img-responsive" src="/images/movies/friends.jpg" alt="friends">
    </div>
  </div>
